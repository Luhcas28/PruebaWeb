
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Views/Tarea_Index.css" rel="stylesheet" />
<p>

</p>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a>Página</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tareas</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header text-white">Lista de Tareas</div>
            <div class="card-body">
                <div class="header">
                    <button type="button" class="btn btn-Agregar" onclick="abrirPopUpFormTarea(null)" id="agregarboton">
                        <i class="fa fa-plus" aria-hidden="true"></i> Agregar Tarea
                    </button>
                </div>
                <p>

                </p>
                <div class="row mt-3 card-load">
                    <div style="overflow-x: auto; white-space: nowrap;" class="card-Tabla">
                        <table id="tbTarea" class="table" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Usuario</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <p>

                </p>
            </div>
        </div>
    </div>
</div>

<!-- Modal Agregar/Modificar Tarea-->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="FormModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header text-dark">
                <h5 class="modal-title" id="FormModalLabel">Tarea</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formUsuario">
                    <input type="hidden" id="txtCodigo" value="0" />
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="txtNombre">Nombre</label>
                            <input type="text" class="form-control" id="txtNombre" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="txtDescripcion">Descripción</label>
                            <textarea class="form-control" id="txtDescripcion"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="cboUsuario">Usuario</label>
                            <select class="form-control" id="cboUsuario"></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-Cerrar" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-Guardar" onclick="GuardarTarea()" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Tarea_Index.js")" type="text/javascript"></script>
}
